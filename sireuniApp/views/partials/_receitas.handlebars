<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="mini-container">

    {{#each receitas}}
        <div class="row-2">
            <div class="message">
                <!-- NOME -->
                <div class="title">
                    {{nome}}
                </div>
                

                <!-- TEXT -->
                <div class="text-receita" id="descricao">
                    {{descricao}}
                </div>

                <!-- INGREDIENTES -->
                <div class="subtitle">
                    Ingredientes:
                </div>

                <div class="text-receita">
                    {{ingredientes}}
                </div>

                <!-- RENDIMENTO -->
                <div class="subtitle">
                    Rendimento:
                </div>

                <div class="text-receita">
                    {{rendimento}}
                </div>

                <!-- AVALIAÇÃO -->
                <div class="avaliacao">

                    <div class="subtitle" id="ava">
                        Avaliação:
                    </div>

                    <div class="text-receita">
                        <span>{{avaliacao}}</span>
                        <i class="fa fa-star"></i>
                    </div>

                </div>      

                
                <!-- EDIT / DELETE-->

                <div class="button-group">
                    <a href="/receitas/edit/{{_id}}"><button class="button">Editar receita</button></a>
                    <form action="/receitas/deletar" method="POST">
                        <input type="hidden" name="id" value="{{_id}}">
                        <button type="submit" class="button" id="red">Deletar receita</button>
                    </form>
                </div>

            </div>
        </div>
    {{else}}
        <h4 class="mt-3">Nenhuma receita registrada</h4>
    {{/each}}

    <a href="/receitas/add"><button class="button">Nova receita</button></a>

</div>



