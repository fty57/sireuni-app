<h3>Editar receita: </h3>


<div class="modal-bg">
    <div class="modal">    

        <form action="/receitas/edit" method="POST">

            <div class="div-01">
                <div class="receita-element">
                    <input type="hidden" name="id" value="{{receita._id}}">
                    <span>Nome da receita:</span>
                    <input type="text" id="nome" name="nome" value="{{receita.nome}}" class="form-control">
                </div>

                <div class="receita-element">
                    <span>Descrição:</span>
                    <input type="text" id="descricao" name="descricao" value="{{receita.descricao}}" class="form-control">
                </div>
            </div>

            <div class="div-01">
                <div class="receita-element">
                    <span>Rendimento:</span>
                    <input type="text" id="rendimento" name="rendimento" value="{{receita.rendimento}}" class="form-control">
                </div>

                <div class="receita-element">
                    <span>Avaliação:</span>
                    <input type="text" id="avaliacao" name="avaliacao" value="{{receita.avaliacao}}" class="form-control">
                </div>

            </div>
            
            <div class="div-02">
                <div class="receita-element">
                    <span>Ingredientes:</span>
                    <textarea type="text" id="ingredientes" name="ingredientes" class="form-control">{{receita.ingredientes}}</textarea>     
                </div>
            </div>
            
            <button class="button" type="submit">Editar receita</button>
        </form> 
    </div>
</div>
