<h3>Editar Evento: </h3>

<div class="modal-bg">
    <div class="modal">

    <form action="/eventos/edit" method="POST">

    <div class="forum-element">
        <input type="hidden" name="id" value="{{evento._id}}">
        <span>Nome do evento:</span>
        <input type="text" id="nome" name="nome" placeholder="Nome do evento" class="form-control" value="{{evento.nome}}">

    </div>

    <div class="forum-element">
        <span>Descrição: </span>
        <input type="text" id="descricao" name="descricao" placeholder="Descrição do evento" class="form-control" value={{evento.descricao}}>
    </div>
        
            
        
        <button type="submit" class="button">Editar Evento</button>
    </form>
    </div>

</div>