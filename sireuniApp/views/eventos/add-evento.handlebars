<h3>Novo Evento: </h3>

<div class="modal-bg">
    <div class="modal">

    <form action="/eventos/novo" method="POST">

        <!-- NOME -->
        <div class="forum-element">
            <span>Nome do evento:</span>
            <input type="text" id="nome" name="nome" placeholder="Nome do Evento" required>
        </div>
        
        <div class="forum-element">
            <span>Descrição: </span>
            <input type="text" id="descricao" name="descricao" placeholder="Descrição do Evento" required>
        </div>
            
        <button type="submit" class="button">Criar Evento</button>
    </form>

    </div>
</div>