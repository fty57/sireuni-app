{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Editar tópico: </h3>

<div class="modal-bg">
    <div class="modal">    

        <form action="/forum/edit" method="POST">

            <div class="forum-element">
                <input type="hidden" name="id" value="{{forum._id}}">
                <span>Nome do usuário:</span>
                <input type="text" id="nome" name="nome" value="{{forum.nome}}" class="form-control" required>
            </div>
            
            <div class="div-02">
                <div class="forum-element">
                    <span>Título do tópico:</span>
                    <textarea type="text" id="titulo" name="titulo" value="{{forum.titulo}}" class="titulo" required></textarea>
                </div>
            </div>
            
            <div class="forum-element">
                <span>Mensagem:</span>
                <input type="text" id="descricao" name="descricao" value="{{forum.descricao}}" class="form-control" required>
            </div>
            

            <button class="button" type="submit">Editar tópico</button>
        </form> 
    </div>
</div>
